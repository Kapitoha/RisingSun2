<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.CharSet">utf8</property>
		<property name="hibernate.connection.characterEncoding">utf8</property>
		<property name="hibernate.connection.useUnicode">true</property>
		<!-- Mapping -->
		<!-- <mapping class="com.springapp.mvc.domain.RulesEntity"/> -->
		<mapping class="com.springapp.mvc.domain.TagsEntity" />
		<mapping class="com.springapp.mvc.domain.UsersEntity" />
		<!-- <mapping class="com.springapp.mvc.domain.UsersrulesEntity"/> -->
		<mapping class="com.springapp.mvc.domain.AccessRight" />
		<mapping class="com.springapp.mvc.domain.Article" />
		<mapping class="com.springapp.mvc.domain.FirstPage" />
		<mapping class="com.springapp.mvc.domain.Archive" />

	</session-factory>
</hibernate-configuration>